<div class="card">
    <h2 class="card-header">Edit post</h2>
    <form class="card-body edit-post-form" id="edit-post-form">
        <div class="form-floating mb-3">
            <label for="post-title" class="form-label"> Title </label>
            <input name="post-title" type="text" placeholder="{{post.title}}" class="form-input w-100">
        </div>
        <div>
            <label class="form-label" for="content"> Content </label>
            <textarea name="content" type="text" placeholder="{{post.content}}" class="form-input w-100" style="height: 100px"></textarea>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-info mb-3">Update post</button>
        <button type="button" class="delete-post-btn w-100 btn btn-lg btn-danger mb-3">Delete post</button>
    </form>
</div>
<script src="../public/edit-post.js"></script>
<script src="../public/delete-post.js" ></script>